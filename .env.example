# AutoSafe Backend Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string (required for production)
DATABASE_URL=postgresql://user:password@host:5432/autosafe

# =============================================================================
# SECURITY
# =============================================================================
# Admin API key for accessing admin endpoints (required)
# Generate a strong random key: openssl rand -hex 32
ADMIN_API_KEY=your-secure-api-key-here

# Secret key for signing tokens (defaults to ADMIN_API_KEY if not set)
# Generate a strong random key: openssl rand -hex 32
SECRET_KEY=your-secret-key-here

# =============================================================================
# DVSA MOT HISTORY API (OAuth 2.0)
# =============================================================================
# Required for real-time vehicle predictions
DVSA_CLIENT_ID=your-dvsa-client-id
DVSA_CLIENT_SECRET=your-dvsa-client-secret
DVSA_TOKEN_URL=https://your-oauth-provider.com/token
DVSA_SCOPE=https://tapi.dvsa.gov.uk/.default
# Optional API key
DVSA_API_KEY=

# =============================================================================
# EMAIL (RESEND)
# =============================================================================
# Required for lead distribution emails
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=leads@yourdomain.com

# =============================================================================
# APPLICATION
# =============================================================================
# Base URL for the application (used in email links)
BASE_URL=https://autosafe.co.uk

# CORS allowed origins (comma-separated)
# Defaults to localhost for development
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# OPTIONAL / DEVELOPMENT
# =============================================================================
# Port for the server (default: 8000)
PORT=8000

# Log level (default: INFO)
LOG_LEVEL=INFO
